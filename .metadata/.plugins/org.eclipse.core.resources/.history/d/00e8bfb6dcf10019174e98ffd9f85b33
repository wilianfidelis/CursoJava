package application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o N x N da matriz");
		int n = sc.nextInt();
		int [][] mat = new int [n][n];
		
		for (int i = 0; i<n ; i++) {
			for (int j = 0; j<n; j++) {
				mat [i][j] = sc.nextInt();
			}
		}
		
		System.out.println("Main diagonal");
		for (int i = 0; i < mat.length; i++) {
			System.out.println(mat [i][i] + " ");
		}
		System.out.println();
		
		int count = 0;
		for (int i = 0; i < mat.length; i++) {
			if (mat[i][i] < 0) {
				count++;
			}
		}
		
		sc.close();
	}

}
