package entites;

public class Product {

	private String name;
	private int idade;
	
	
	/*--- Construtores ---*/
	public Product() {

	}

	public Product(String name, int idade) {
		this.name = name;
		this.idade = idade;
	}

	public Product(String name) {
		this.name = name;
	}

	/*--- Construtores ---*/

	
	
	
	/*--- Encapsulamento ---*/
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getIdade() {
		return idade;
	}

	public void setIdade(int idade) {
		this.idade = idade;
	}
	/*--- Encapsulamento ---*/

	
	public String toString() {
		return name;
	}

}
